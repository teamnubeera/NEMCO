<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Merge Lines of Files</title>
</head>
<body>
    <h1>Merge Lines of Files</h1>
    <input type="file" id="file1" multiple />
    <input type="file" id="file2" multiple />
    <button onclick="mergeFiles()">Merge Files</button>
    <pre id="output"></pre>

    <script>
        function mergeFiles() {
            const fileInput1 = document.getElementById("file1");
            const fileInput2 = document.getElementById("file2");
            const outputElement = document.getElementById("output");
            const files = [...fileInput1.files, ...fileInput2.files];
            let mergedContent = '';

            files.forEach(file => {
                const reader = new FileReader();
                reader.onload = function(e) {
                    mergedContent += e.target.result + '\n'; // Add file content to mergedContent
                    outputElement.textContent = mergedContent; // Display merged content
                };
                reader.readAsText(file);
            });
        }
    </script>
</body>
</html>
